{
  "name": "professional-grow-management",
  "version": "1.0.0",
  "description": "Professional Agricultural Growing Calendar and Management System",
  "main": "server/index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx"
  },
  "keywords": [
    "agriculture",
    "growing",
    "hydroponic",
    "calendar",
    "management",
    "cultivation",
    "plant-care"
  ],
  "author": "Professional Grower",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.2",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "eslint": "^8.47.0"
  }
}
